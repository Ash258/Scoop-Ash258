{
    "version": "2013.11.7",
    "description": "Metro X3 Cursor.",
    "homepage": "https://www.deviantart.com/exsess/art/Metro-X3-Cursors-Update-Two-411020859",
    "license": {
        "identifier": "CC-BY-SA-3.0"
    },
    "notes": [
        "User logout is required for cursor change take effect.",
        "Now you can run \"scoop uninstall X3\" and delete it's installation files."
    ],
    "url": "https://orig00.deviantart.net/0070/f/2013/311/6/2/metro_x3_cursors__update_two__by_exsess-d6splq3.zip",
    "hash": "1ad1572235c8c3aff5607d5cf26e1d96d2c76b033fc8796d79cb4af5d9ed89b9",
    "extract_dir": "Metro X3 by exsess\\Bold\\Red",
    "installer": {
        "script": [
            "pnputil.exe -i -a install.inf",
            "$regPath = \"HKCU:\\Control Panel\\Cursors\"",
            "$sysPath = \"$env:SystemRoot\\Cursors\\Metro X3 by exsess\\Bold\\Red\"",
            "New-ItemProperty -Path $regPath -Name \"(Default)\" -Value \"Metro X3 Bold-Red\" -PropertyType String -Force",
            "New-ItemProperty -Path $regPath -Name \"AppStarting\" -Value \"$sysPath\\X3_working.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"Arrow\" -Value \"$sysPath\\X3_arrow.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"Crosshair\" -Value \"$sysPath\\X3_precision.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"Hand\" -Value \"$sysPath\\X3_links.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"Help\" -Value \"$sysPath\\X3_help.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"IBeam\" -Value \"$sysPath\\X3_beam.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"No\" -Value \"$sysPath\\X3_unavail.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"NWPen\" -Value \"$sysPath\\X3_pen.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"Scheme Source\" -Value 1 -PropertyType DWord -Force",
            "New-ItemProperty -Path $regPath -Name \"SizeAll\" -Value \"$sysPath\\X3_move.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"SizeNESW\" -Value \"$sysPath\\X3_nesw.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"SizeNS\" -Value \"$sysPath\\X3_ns.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"SizeNWSE\" -Value \"$sysPath\\X3_nwse.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"SizeWE\" -Value \"$sysPath\\X3_ew.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"UpArrow\" -Value \"$sysPath\\X3_up.ani\" -PropertyType ExpandString -Force",
            "New-ItemProperty -Path $regPath -Name \"Wait\" -Value \"$sysPath\\X3_busy.ani\" -PropertyType ExpandString -Force"
        ]
    }
}
