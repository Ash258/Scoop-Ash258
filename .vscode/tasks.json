{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update vscode",
            "type": "shell",
            "command": ".\\bin\\checkver.ps1 vscode-insiders -u",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
        },
        {
            "label": "Check version",
            "type": "shell",
            "command": ".\\bin\\checkver.ps1",
            "problemMatcher": {
                "owner": "pwsh",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*):\\s(\\d+.\\d+)\\s((\\(scoop version is (\\d+.\\d+)\\)).*)$",
                        "file": 1,
                        "code": 2,
                        "message": 3,
                        "severity": 4,
                        "loop": true
                    }
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
