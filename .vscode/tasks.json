{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Push Auto-PR",
            "type": "shell",
            "options": {
                "env": {
                    "SCOOP_DEBUG": "true",
                },
            },
            "command": "shovel",
            "args": [
                "utils",
                "auto-pr",
                "--additional-options",
                "-Push",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
            },
            "problemMatcher": [],
        },
        {
            "label": "Checkver Actual",
            "type": "shell",
            "options": {
                "env": {
                    "SCOOP_DEBUG": "true",
                },
            },
            "command": "shovel",
            "args": [
                "utils",
                "checkver",
                "'${file}'",
                "--additional-options",
                "-Force",
            ],
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 99,
            },
        },
        {
            "label": "Checkhashes Actual",
            "type": "shell",
            "options": {
                "env": {
                    "SCOOP_DEBUG": "true",
                },
            },
            "command": "shovel",
            "args": [
                "utils",
                "checkhashes",
                "'${file}'",
                "--additional-options",
                "-Force",
            ],
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 99,
            },
        },
        {
            "label": "Purge Uninstall Actual",
            "type": "shell",
            "options": {
                "env": {
                    "SCOOP_DEBUG": "true",
                },
            },
            "command": "shovel",
            "args": [
                "uninstall",
                "'${fileBasenameNoExtension}'",
                "--purge",
            ],
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 99,
                "reevaluateOnRerun": false,
            },
        },
        {
            "label": "Install Actual",
            "type": "shell",
            "options": {
                "env": {
                    "SCOOP_DEBUG": "true",
                },
            },
            "command": "shovel",
            "args": [
                "install",
                "'${file}'",
                "--arch",
                "${input:pickArchitectureType}",
            ],
            "problemMatcher": [],
            "runOptions": {
                "reevaluateOnRerun": false,
                "instanceLimit": 99,
            },
        },
        {
            "label": "ReInstall Actual",
            "type": "shell",
            "options": {
                "env": {
                    "SCOOP_DEBUG": "true",
                },
            },
            "dependsOn": [
                "Purge Uninstall Actual",
                "Install Actual",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 99,
            },
        },
        {
            "label": "Force Update Actual",
            "type": "shell",
            "options": {
                "env": {
                    "SCOOP_DEBUG": "true",
                },
            },
            "command": "shovel",
            "args": [
                "update",
                "'${fileBasenameNoExtension}'",
                "--force",
            ],
            "problemMatcher": [],
            "runOptions": {
                "reevaluateOnRerun": false,
                "instanceLimit": 99,
            },
        },
        {
            "label": "Sordum Updates",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "SCOOP_DEBUG": "true",
                },
            },
            "command": ".\\bin\\sordum.ps1",
            "problemMatcher": [],
        },
        {
            "label": "Test Homepage",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "SCOOP_DEBUG": "true",
                },
            },
            "command": "shovel",
            "args": [
                "test-home",
                "'${selectedText}'",
            ],
            "problemMatcher": [],
        },
        {
            "label": "Download",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "SCOOP_DEBUG": "true",
                },
            },
            "command": "shove",
            "args": [
                "download",
                "'${file}'",
                "--all-architectures",
                "--skip",
            ],
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 99,
            },
        },
    ],
    "inputs": [
        {
            "id": "pickArchitectureType",
            "description": "Select architecture to be installed",
            "type": "pickString",
            "options": [
                "64bit",
                "32bit",
            ],
            "default": "64bit",
        },
    ],
}
