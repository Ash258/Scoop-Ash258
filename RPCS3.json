{
    "version": "0.0.5-7104",
    "description": "RPCS3. PS3 emulator/debugger",
    "homepage": "https://rpcs3.net/",
    "license": {
        "identifier": "GPL-2.0",
        "url": "https://github.com/RPCS3/rpcs3/blob/master/LICENSE"
    },
    "notes": [
        "Install firmware via 'File -> Install firmware'.",
        "Latest firmware file is located inside app directory ('PS3UPDAT.PUP').",
        "HOW TO INSTALL GAME:",
        "1.   Download game from 'http://psndl.net/packages'",
        "2.         Both files are needed('Rap', 'Package)'",
        "3.   Install via 'File -> Install .pkg'",
        "4.   Copy RAP file and paste it into 'App dir\\dev_hdd0\\home\\00000001\\exdata'",
        "5.   Enjoy the game <3"
    ],
    "depends": "vcredist2015",
    "architecture": {
        "64bit": {
            "url": [
                "https://github.com/RPCS3/rpcs3-binaries-win/releases/download/build-a19113025c53b6bd86f74489f4d3048204505004/rpcs3-v0.0.5-7104-a1911302_win64.7z",
                "http://dus01.ps3.update.playstation.net/update/ps3/image/us/2017_1113_152d950c365ede4130c53ceb18dcd43b/PS3UPDAT.PUP"
            ],
            "hash": [
                "E890877BAE5D05FF7C9BEDC3F8A1407DF143EC5A9985A85BF4ECE5CA9B57C95A",
                "a70669bc35a5d688c94f5db8e1eb4110295b1b076ccc3c8e4a7e9ee397a6ca41"
            ]
        }
    },
    "post_install": [
        "$outFile = \"$dir\\GuiConfigs\\CurrentSettings.ini\"",
        "Write-Output \"[Meta]`r`ncurrentStylesheet=Darker Style by TheMitoSan\" | Out-File $outFile -Encoding ascii"
    ],
    "persist": [
        "dev_hdd0",
        "GuiConfigs",
        "PS3UPDAT.PUP"
    ],
    "shortcuts": [
        [
            "rpcs3.exe",
            "RPCS3"
        ]
    ],
    "checkver": {
        "url": "https://github.com/RPCS3/rpcs3-binaries-win/releases/latest/",
        "re": "<a href=\".*/build-((\\w{8})\\w{32})/rpcs3-v(((\\d+\\.?){3}-(\\d{4}))-.*)_.*\">",
        "replace": "$4"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/RPCS3/rpcs3-binaries-win/releases/download/build-$match1/rpcs3-v$version-$match2_win64.7z",
                "hash": {
                    "url": "https://github.com/RPCS3/rpcs3-binaries-win/releases/latest/",
                    "find": "<p>([A-f\\d]{64});.*</p>"
                }
            }
        }
    }
}
