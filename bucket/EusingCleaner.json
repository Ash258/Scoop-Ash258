    "hash": "90bab51e3c8a207dd5af7cee823c7495d4ccbc716b22db4b37e529b3373438bf",
    "pre_install": [
        "$file = 'options.ini'",
        "if (!(Test-Path \"$persist_dir\\$file\")) {",
        "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
        "    $CONT = @('[Options]', \"OutputDirectory=$dir\\Backup\")",
        "    New-Item \"$dir\\Backup\" -Type Directory | Out-Null",
        "    Set-Content \"$dir\\$file\" ($CONT -join \"`r`n\") -Encoding Ascii -Force",
        "}"
    ],
    "persist": "options.ini",
    "shortcuts": [
        [
            "SCleaner.exe",
            "Eusing Cleaner"
        ]
    ],
    "checkver": "Eusing Cleaner\\s+([\\d\\.]+)",
    "autoupdate": {
        "url": "https://www.hide-windows.com/Download/EusingCleaner.zip"
    }
}
