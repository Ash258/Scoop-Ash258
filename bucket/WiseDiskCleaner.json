{
    "version": "10.1.8",
    "description": "Wise Disk Cleaner. Clean junks of Browsers, remove junk and useless files of Windows and Defragment disk.",
    "homepage": "https://www.wisecleaner.com/wise-disk-cleaner.html",
    "license": "Freeware",
    "url": "https://downloads.wisecleaner.com/soft/WDCFree.zip",
    "hash": "e35c772d89159dfecb2a4c09c63cb4852656df4d8e199cce9d2cbf236f7debd0",
    "extract_dir": "Wise Disk Cleaner",
    "installer": {
        "script": [
            "$file = 'config.ini'",
            "if (-not (Test-Path \"$persist_dir\\$file\")) {",
            "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
            "    $CONT = (Get-Content \"$dir\\$file\")",
            "    $CONT = $CONT -replace 'checkNewVer=1', 'checkNewVer=0'",
            "    Set-Content \"$dir\\$file\" ($CONT -join \"`r`n\") -Encoding Ascii",
            "}"
        ]
    },
    "persist": [
        "config.ini",
        "DefragOptions.ini"
    ],
    "shortcuts": [
        [
            "WiseDiskCleaner.exe",
            "Wise Disk Cleaner"
        ]
    ],
    "checkver": "version: ([\\d\\.]+)",
    "autoupdate": {
        "url": "https://downloads.wisecleaner.com/soft/WDCFree.zip"
    }
}
