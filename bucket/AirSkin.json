{
    "version": "2018-1114",
    "description": "Air For Steam. An elegant and customizable skin for Steam.",
    "homepage": "http://airforsteam.com/",
    "license": {
        "identifier": "CC-BY-NC-4.0",
        "url": "https://github.com/airforsteam/Air-for-Steam/blob/master/LICENSE.txt"
    },
    "notes": [
        "If you installed steam via scoop, skin was automatically copied.",
        "Otherwise copy '$dir' folder into '...\\Steam\\skins' folder.",
        "After copying you can uninstall with 'scoop uninstall AirForSteam'.",
        "There are few themes, which could be set. (see: https://github.com/Outsetini/Air-for-Steam/wiki#colors)"
    ],
    "url": "https://github.com/airforsteam/Air-for-Steam/archive/2018-1114.zip",
    "hash": "94582bc0219b1ca876399f091c5739ba1603a0557acdc63838e37f910a578587",
    "extract_dir": "Air-for-Steam-2018-1114",
    "installer": {
        "script": [
            "$extras = \"$dir\\+Extras\"",
            "$toDelete = @(\"$dir\\Support Air on Patreon.url\", \"$dir\\README.md\", \"$dir\\LICENSE.txt\", \"$dir\\FAQ.url\", ",
            "    \"$dir\\Contributors.url\", \"$dir\\Changelog.url\", \"$dir\\.gitattributes\", \"$extras\\Fonts\", \"$extras\\Square Avatars\"",
            ")",
            "Remove-Item $toDelete -Force -Recurse",
            "    # Copy rather than moving (could be changed afterwards)",
            "Copy-Item \"$extras\\Themes\\Dark\\*\" \"$dir\" -Force -Recurse",
            "    # REPLACING HELL in config.ini",
            "$FILE = \"$dir\\config.ini\"",
            "$content = Get-Content $FILE",
            "    # Replacing Default Theme",
            "$find = 'include \"resource/colors/sky.styles\"'",
            "$replace = \"//$find\"",
            "$content = $content.Replace($find, $replace)",
            "    # Enabling Pixeldark / Spotify Theme",
            "#$find = 'include \"resource/colors/user/pixeldark.styles\"'",
            "$find = 'include \"resource/colors/user/spotify.styles\"'",
            "$replace = $find",
            "$find = \"//$find\"",
            "$content = $content.Replace($find, $replace)",
            "    # Final file overwrite",
            "Set-Content $FILE $content -Encoding Ascii",
            "    # COPYING",
            "    # If steam is installed via scoop, copy skin",
            "if ((Get-ChildItem \"$env:SCOOP\\apps\" -Filter 'Steam').Exists) {",
            "    Write-Host 'Detected installed Steam via SCOOP. Copying Files.' -f Yellow",
            "    Copy-Item \"$dir\" \"$(Resolve-Path (scoop prefix Steam))\\skins\\\" -Force -Recurse",
            "    Write-Host 'âœ” Copying DONE. Set skin in Steam interface settings.' -f Green",
            "}"
        ]
    },
    "checkver": {
        "url": "https://api.github.com/repos/airforsteam/air-for-steam/releases/latest",
        "jsonpath": "$.tag_name"
    },
    "autoupdate": {
        "url": "https://github.com/airforsteam/Air-for-Steam/archive/$version.zip",
        "extract_dir": "Air-for-Steam-$version"
    }
}
