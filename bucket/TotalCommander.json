    "installer": {
        "script": [
            "extract_7zip \"$dir\\INSTALL.CAB\" \"$dir\\cosi\"",
            "Get-ChildItem \"$dir\" -Exclude cosi | Remove-Item -Force -Recurse",
            "Move-Item -Path \"$dir\\cosi\\*\" -Destination \"$dir\"",
            "Remove-Item \"$dir\\cosi\", \"$dir\\e\", \"$dir\\d\" -Force -Recurse",
            "    # Creating default settings",
            "function CreateFile([String] $file, [String] $content = $null) {",
            "    if (!(Test-Path \"$persist_dir\\$file\")) {",
            "        Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
            "        Set-Content \"$dir\\$file\" $content -Encoding Ascii",
            "    }",
            "}",
            "CreateFile 'DEFAULT.BAR'",
            "CreateFile 'default.br2'",
            "CreateFile 'wcx_ftp.ini'",
            "CreateFile 'wincmd.ini' \"[Configuration]`r`nUseIniInProgramDir=7\"",
            "CreateFile 'wincmd.key'"
        ]
    },
    "persist": [
        "DEFAULT.BAR",
        "default.br2",
        "wcx_ftp.ini",
        "wincmd.ini",
        "wincmd.key"
    ],
