{
    "version": "0.0.5-7576",
    "description": "RPCS3. Experimental open-source Sony PlayStation 3 emulator and debugger.",
    "homepage": "https://rpcs3.net/",
    "license": {
        "identifier": "GPL-2.0",
        "url": "https://github.com/RPCS3/rpcs3/blob/master/LICENSE"
    },
    "notes": [
        "Install firmware via 'File -> Install firmware'.",
        "    Latest firmware file ('PS3UPDAT.PUP') is located inside app directory ('$dir').",
        "HOW TO INSTALL GAME:",
        "1.   Download games from 'http://psndl.net/packages'",
        "1.1.       Both files ('Rap', 'Package') are needed",
        "2.   Install via 'File -> Install .pkg'",
        "3.   Copy RAP file and paste it into '$dir\\dev_hdd0\\home\\00000001\\exdata'",
        "4.   Enjoy the game <3"
    ],
    "depends": "vcredist2015",
    "architecture": {
        "64bit": {
            "url": [
                "https://github.com/RPCS3/rpcs3-binaries-win/releases/download/build-76f94940cd44e99ef2f8daa4674ae05ac619e712/rpcs3-v0.0.5-7576-76f94940_win64.7z",
                "http://dus01.ps3.update.playstation.net/update/ps3/image/us/2017_1113_152d950c365ede4130c53ceb18dcd43b/PS3UPDAT.PUP"
            ],
            "hash": [
                "5f1fca5cd532ba7643c93074b8cd6d0f3c9e58f774c12bad7e857fcafc0e4861",
                "a70669bc35a5d688c94f5db8e1eb4110295b1b076ccc3c8e4a7e9ee397a6ca41"
            ]
        }
    },
    "installer": {
        "script": [
            "$file = 'GuiConfigs\\CurrentSettings.ini'",
            "if (!(Test-Path \"$persist_dir\\$file\")) {",
            "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
            "    $outfile = \"$dir\\$file\"",
            "    New-Item $outFile -Type File -Force | Out-Null",
            "    $CONT = @('[Meta]', 'currentStylesheet=Darker Style by TheMitoSan')",
            "    Set-Content $outFile ($CONT -join \"`r`n\") -Encoding Ascii",
            "}"
        ]
    },
    "persist": [
        "dev_hdd0",
        "GuiConfigs"
    ],
    "shortcuts": [
        [
            "rpcs3.exe",
            "RPCS3"
        ]
    ],
    "checkver": {
        "github": "https://github.com/RPCS3/rpcs3-binaries-win/",
        "regex": "<a href=\".*/build-(?<commit>(?<cosi>\\w{8})\\w{32})/rpcs3-v(?<main>[\\d\\.]+-\\d{4})",
        "replace": "${main}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/RPCS3/rpcs3-binaries-win/releases/download/build-$matchCommit/rpcs3-v$version-$matchCosi_win64.7z",
                "hash": {
                    "url": "https://github.com/RPCS3/rpcs3-binaries-win/releases/tag/build-$matchCommit/",
                    "find": "([A-Fa-f\\d]{64});"
                }
            }
        }
    }
}
