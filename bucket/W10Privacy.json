    "pre_install": [
        "$file = 'W10Privacy.ini'",
        "if (-not (Test-Path \"$persist_dir\\$file\")) {",
        "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
        "    Set-Content \"$dir\\$file\" '' -Encoding Ascii",
        "}"
    ],
    "persist": "W10Privacy.ini",
    "bin": "W10Privacy.exe",
    "shortcuts": [
        [
            "W10Privacy.exe",
            "W10Privacy"
        ]
    ],
    "checkver": {
        "url": "https://www.winprivacy.de/deutsch-start/download/",
        "regex": "(?sm)current version: v\\.(?<ver>[\\d\\.]+).*href=\"/app/download/(?<cosi>\\d+)/W10Privacy.zip",
        "replace": "${ver}"
    },
    "autoupdate": {
        "url": "https://www.winprivacy.de/app/download/$matchCosi/W10Privacy.zip",
        "hash": {
            "url": "https://www.winprivacy.de/deutsch-start/download/",
            "regex": "SHA256-Hash \\(of the file $basename\\): ($sha256)"
        }
    }
}
